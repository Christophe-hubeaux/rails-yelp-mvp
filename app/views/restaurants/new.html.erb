<div class="container-fluid text-center">
    <div class="row banner">
        <div class="col title">
            My restaurants
        </div>
    </div>
    <div class="row">
        <h1>Create restaurant</h1>
        <div>
            <%= simple_form_for @restaurant do |f| %>
            <%= f.input :name %>
            <%= f.input :address %>
            <%= f.input :category %>
            <%= f.input :phone_number %>
            <%= f.button :submit %>
            <% end %>
        </div>
    </div>
</div>




