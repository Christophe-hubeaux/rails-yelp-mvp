<div class="container-fluid text-center">
    <div class="row banner">
        <div class="col-10 title">
            My restaurants
        </div>
        <div class="col-2 addresto">
            <%= link_to "Add restaurant", new_restaurant_path %>
        </div>
    </div>
    <div class="row">
        <h1>List of restaurants</h1>
        <div>
            <ul class="list-group resto">
                <% @restaurants.each do |resto| %>
                <li class="list-group-item"><%= link_to resto.name, restaurant_path(resto) %></li>
                <% end %>
            </ul>
        </div>
    </div>
</div>




